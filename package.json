{
  "name": "smart-aging",
  "version": "1.0.0",
  "main": "index.js",
  "scripts": {
    "start:server": "cd server && ts-node-dev src/index.ts",
    "dev:elderly": "cd apps/elderly-app && npm run dev",
    "dev:family": "cd apps/family-app && npm run dev",
    "dev:nurse": "cd apps/nurse-app && npm run dev",
    "dev:admin": "cd apps/admin-panel && npm run dev",
    "lint": "eslint . --ext .ts,.tsx,.vue --fix",
    "prepare": "husky install",
    "install:all": "npm install && npm run install:workspaces",
    "install:workspaces": "cd packages && npm install && cd ../apps/elderly-app && npm install && cd ../family-app && npm install && cd ../nurse-app && npm install && cd ../admin-panel && npm install && cd ../../server && npm install"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "description": "",
  "private": true,
  "workspaces": [
    "packages",
    "apps/*",
    "server"
  ],
  "devDependencies": {
    "@types/morgan": "^1.9.10",
    "eslint": "^9.32.0",
    "husky": "^8.0.0",
    "lint-staged": "^16.1.2",
    "prettier": "^3.6.2",
    "stylelint": "^16.23.0",
    "stylelint-config-standard": "^39.0.0",
    "vite-plugin-mkcert": "^1.17.8"
  },
  "lint-staged": {
    "*.{js,ts,jsx,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{css,scss,less}": [
      "stylelint --fix"
    ]
  },
  "dependencies": {
    "express": "^5.1.0",
    "forever": "^4.0.3",
    "jsonwebtoken": "^9.0.2",
    "log4j": "^1.0.0",
    "morgan": "^1.10.1",
    "serve-index": "^1.9.1",
    "socket.io": "^4.8.1",
    "socket.io-client": "^4.8.1"
  }
}
